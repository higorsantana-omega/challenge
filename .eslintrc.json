{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
    "overrides": [{
        "files": ["*.ts"],
        "rules": {
            "no-useless-constructor": "off"
        }
    }],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    "import/order": [
        "error",
        {
            "groups": [
            ["builtin", "external"],
            ["internal", "parent", "sibling", "index"]
            ],
            "newlines-between": "always",
            "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
            }
        }
    ]
  }
}
